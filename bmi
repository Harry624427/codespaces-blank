def calculate_bmi():
    height = float(input("请输入您的身高(米): "))
    weight = float(input("请输入您的体重(kg): "))
    
    bmi = weight / (height ** 2)
    
    print("您的BMI是: {:.1f}".format(bmi))
    
    if bmi < 18.5:
        print("您的体质偏瘦")
    elif 18.5 <= bmi < 24:
        print("您的体质正常")
    elif 24 <= bmi < 28:
        print("您的体质过重")
    elif 28 <= bmi < 30:
        print("您的体质轻度肥胖")
    elif 30 <= bmi < 35:
        print("您的体质中度肥胖")
    else:
        print("您的体质重度肥胖")

calculate_bmi()
